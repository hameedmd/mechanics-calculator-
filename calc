using System;
using System.Runtime.InteropServices;

namespace calculator_1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Welcome to the mechanics calculator");
            Console.WriteLine(
                "What type of question are you looking to answer: we can help you with moments, forces and friction, projectiles, application of forces and kinematics");
            Console.WriteLine("Please choose an option");

            var option = Console.ReadLine();

            if (option == "moments")
            {
                Console.WriteLine("Is this a standard moments question or ladder question?");
                var option1 = Console.ReadLine();

                if (option1 == "standard moments question")
                {
                    Console.WriteLine("What is the distance of the moment?");
                    double mass = Convert.ToDouble(Console.ReadLine());
                    Console.WriteLine("What is the weight of the force?");
                    double weight = Convert.ToDouble(Console.ReadLine());
                    Console.WriteLine("What is the angle?");
                    double radian = Convert.ToDouble(Console.ReadLine());
                    double radians = (Math.PI / 180) * radian;
                    Console.WriteLine("When resolving to split the force in its components, is this a sin or cos function?");
                    if (Console.ReadLine() == "sin")
                    {
                        double trigRadians = Math.Sin(radians);
                        Console.WriteLine(trigRadians);
                        var moment1 = (trigRadians * mass) * weight;
                        Console.WriteLine(moment1);
                    }
                    else
                    {
                        double trigRadians = Math.Cos(radians);
                        Console.WriteLine(trigRadians);
                        var moment1 = (trigRadians * mass) * weight;
                        Console.WriteLine(moment1);
                    }
                    
                }
                
                //currently this will only workout an unknown force

                else
                {
                    Console.WriteLine("What is the angle of elevation");
                    double angle = Convert.ToDouble(Console.ReadLine());
                    Console.WriteLine("How many forces are in play here? *This includes weight of the ladder as a force*");
                    var numForces = Console.ReadLine();
                    if (numForces == "2")
                    {
                        Console.WriteLine("We will be trying to workout an unknown force in a system that is in equilibrium");
                        Console.WriteLine("What is the WEIGHT (including gravity) of the ladder?");
                        double firstForce = Convert.ToDouble(Console.ReadLine());
                        Console.WriteLine("We will be taking moments from the bottom of the ladder");
                        Console.WriteLine("What is the distance of the weight from the bottom of the ladder?");
                        double distanceFirstForce = Convert.ToDouble(Console.ReadLine());
                        Console.WriteLine("What is the distance of the unknown force from the bottom of the ladder");
                        double unknownForceDistance = Convert.ToDouble(Console.ReadLine());
                        double angle1 = (Math.PI / 180) * angle;
                        double trigAngle = Math.Cos(angle1);
                        double firstMoment = trigAngle * firstForce * distanceFirstForce;
                        double unknownForce = firstMoment / unknownForceDistance * 9.8;
                        Console.WriteLine("The magnitude of the unknown force is {0}n", unknownForce);
                        

                    }

                    //question 11 mixed exercise 4

                    else if (numForces == "3")
                    {
                        Console.WriteLine("We will be trying to workout the distance an unknown force from the bottom of the ladder");
                        Console.WriteLine("Is friction involved?");
                        if (Console.ReadLine() == "yes")
                        {
                            Console.WriteLine("Is friction given or is the coefficient of friction given?");
                            if (Console.ReadLine() == "friction")
                            {
                                Console.WriteLine("What is the total friction? * CAUTION, it is assumed this is in newtons, if your value for friction is in g please convert by multiplying by 9.8");
                                double friction1 = Convert.ToDouble(Console.ReadLine());
                                Console.WriteLine("We will be taking moments from the bottom of the ladder");
                                Console.WriteLine("What is the MASS of the ladder?");
                                double firstForce = Convert.ToDouble(Console.ReadLine());
                                Console.WriteLine("What is the distance of the weight from the bottom of the ladder");
                                double distanceFirstForce = Convert.ToDouble(Console.ReadLine());
                                double angle1 = (Math.PI / 180) * angle;
                                double trigAngle = Math.Cos(angle1);
                                double trigAngle2 = Math.Sin(angle1);
                                double firstMoment = trigAngle * distanceFirstForce * firstForce * 9.8;
                                Console.WriteLine("What is the length of the ladder");
                                double ladderLength = Convert.ToDouble(Console.ReadLine());
                                double secondMoment = trigAngle2 * ladderLength * friction1;
                                Console.WriteLine("What is the MASS of the force you are trying to find the distance of?");
                                double secondForce = Convert.ToDouble(Console.ReadLine());
                                double thirdMoment = secondForce * trigAngle * 9.8;
                                double unknownDistance = (secondMoment - firstMoment) / thirdMoment;
                                Console.WriteLine("The distance you tried to find is {0}m", unknownDistance);


                            }
                            else
                            {
                                Console.WriteLine("We will be taking moments from the bottom of the ladder");
                                Console.WriteLine("What is the MASS of the ladder?");
                                double firstForce = Convert.ToDouble(Console.ReadLine());
                                Console.WriteLine("What is the distance of the weight from the bottom of the ladder");
                                double distanceFirstForce = Convert.ToDouble(Console.ReadLine());
                                Console.WriteLine("What is the value of the second force");
                                double thirdForce = Convert.ToDouble(Console.ReadLine());
                                double angle1 = (Math.PI / 180) * angle;
                                double trigAngle = Math.Cos(angle1);
                                double trigAngle2 = Math.Sin(angle1);
                                double firstMoment = trigAngle * distanceFirstForce * firstForce * 9.8;
                                Console.WriteLine("What is the length of the ladder");
                                double ladderLength = Convert.ToDouble(Console.ReadLine());
                                double secondMoment = trigAngle2 * ladderLength * thirdForce;
                                Console.WriteLine("What is the MASS of the force you are trying to find the distance of?");
                                double secondForce = Convert.ToDouble(Console.ReadLine());
                                double thirdMoment = secondForce * trigAngle * 9.8;
                                double unknownDistance = (secondMoment - firstMoment) / thirdMoment;
                                Console.WriteLine("The distance you tried to find is {0}m", unknownDistance);
                            }
                        }
                        else
                        {
                            Console.WriteLine("We will be taking moments from the bottom of the ladder");
                            Console.WriteLine("What is the MASS of the ladder?");
                            double firstForce = Convert.ToDouble(Console.ReadLine());
                            Console.WriteLine("What is the distance of the weight from the bottom of the ladder");
                            double distanceFirstForce = Convert.ToDouble(Console.ReadLine());
                            Console.WriteLine("What is the mass of the second force");
                            double thirdForce = Convert.ToDouble(Console.ReadLine());
                            double angle1 = (Math.PI / 180) * angle;
                            double trigAngle = Math.Cos(angle1);
                            double trigAngle2 = Math.Sin(angle1);
                            double firstMoment = trigAngle * distanceFirstForce * firstForce * 9.8;
                            Console.WriteLine("What is the length of the ladder");
                            double ladderLength = Convert.ToDouble(Console.ReadLine());
                            double secondMoment = trigAngle2 * ladderLength * thirdForce * 9.8;
                            Console.WriteLine("What is the MASS of the force you are trying to find the distance of?");
                            double secondForce = Convert.ToDouble(Console.ReadLine());
                            double thirdMoment = secondForce * trigAngle * 9.8;
                            double unknownDistance = (secondMoment - firstMoment) / thirdMoment;
                            Console.WriteLine("The distance you tried to find is {0}m", unknownDistance);
                        }
                    }
                    else if (numForces == "4")
                    {
                        Console.WriteLine("Is friction involved?");
                        if (Console.ReadLine() == "yes")
                        {
                            Console.WriteLine("What is the coefficient of friction?");
                            var friction1 = Console.ReadLine();
                        }
                        else
                        {
                            Console.WriteLine("We will be taking moments from the bottom of the ladder");
                            Console.WriteLine("What is the distance of the first force from the bottom of the ladder");
                            double distanceFirstForce = Convert.ToDouble(Console.ReadLine());
                            double angle1 = (Math.PI / 180) * angle;
                            double trigAngle = Math.Cos(angle1);
                            double firstMoment = trigAngle * distanceFirstForce;

                        }
                    }
                }
            }

        }
    }
}
