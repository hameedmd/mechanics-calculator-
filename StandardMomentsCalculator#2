using System;
using static System.Console;

namespace calc
{
    internal static class StandardMomentsCalculator
    {
        public static void CalculateStandardExercise()
        {
            var length = Utility.Ask("What is the perpendicular distance length of the moment? \n");
            var weight = Utility.Ask("What is the weight of the force?\n");
            var radian = Utility.Ask("What is the angle \n");
            var radians = Math.PI / 180 * radian;

            var calculateMoment = new CommonAttributes(radians, weight, length, 1, 2, 3, 4);  
            WriteLine(
                "When resolving to split the force in its components, is this a sin or cos function?");
            if (ReadLine() == "sin")
            {
                var trigRadians = Math.Sin(calculateMoment.Angle);
                WriteLine(trigRadians);
                var moment1 = trigRadians * calculateMoment.Distance1St * calculateMoment.Weight1St;
                WriteLine(moment1);
            }
            else
            {
                var trigRadians = Math.Cos(calculateMoment.Angle);
                WriteLine(trigRadians);
                var moment1 = trigRadians * calculateMoment.Distance1St * calculateMoment.Weight1St;
                WriteLine(moment1);
            }
        }
    }
}
