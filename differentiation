using System;
using static System.Console;

namespace calc
{
    internal class Differentiation
    {
        public static void Derivative()
        {
            WriteLine("Enter your number");
            var number = Convert.ToInt32(ReadLine());
            WriteLine("enter your letter");
            var letter = ReadLine();
            WriteLine("enter your power");
            var power = Convert.ToInt32(ReadLine());
            var power1 = power--;
            WriteLine($"{number * power1}{letter}^{power}");
        }
    }
}
