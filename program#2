using static System.Console;

namespace calc
{
    internal static class Program
    {
        private static void Main(string[] args)
        {
            WriteLine("Welcome to the mechanics calculator");
            WriteLine(
                "What type of question are you looking to answer: we can help you with moments, forces and friction, projectiles, application of forces and kinematics");
            WriteLine("Please choose an option");
            var option = ReadLine();

            switch (option)
            {
                case "moments":
                {
                    WriteLine("Is this a standard moments question or ladder question?");
                    var momentType = ReadLine();

                    if (momentType == "standard")
                        StandardMomentsCalculator.CalculateStandardExercise();
                    else
                        MomentsAboutALadder.CalculateLadderExercise();
                    break;
                }
                case "kinematics":
                {
                    WriteLine(
                        "Is this question a constant acceleration, constant velocity or variable acceleration?");
                    var option1 = ReadLine();
                    switch (option1)
                    {
                        case "variable acceleration":
                        {
                            var mech = new Kinematics();
                            Kinematics.VariableAcceleration();
                            break;
                        }
                        case "constant acceleration":
                        {
                            var mech = new Kinematics();
                            mech.ConstantAcceleration();
                            break;
                        }
                        case "constant velocity":
                        {
                            var mech = new Kinematics();
                            mech.ConstantVelocity();
                            break;
                        }
                    }

                    break;
                }
                case "projectiles":
                {
                    WriteLine("Is this a horizontal projectile or in both directions");
                    if (ReadLine() == "horizontal")
                    {
                        var horizontalMotion = new ProjectileHorizontalMotion();
                        ProjectileHorizontalMotion.Horizontal();
                    }
                    else
                    {
                        var verticalMotion = new ProjectileVerticalMotion();
                        ProjectileVerticalMotion.Vertical();
                    }

                    break;
                }
                case "forces and friction":
                {
                    break;
                }
                case "application of forces":
                {
                    break;
                }
            }


        }
    }
}
